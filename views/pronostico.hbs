        <option value="{{this._id}}">{{this.nombre}}</option>
      {{/each}}
    </select>
    <br />
    <label for="favoriteTeams">Equipo Amado</label>
    <select class="form-select" name="favoriteTeams" multiple>
      {{#each allTeams}}
        <option value="{{this._id}}">{{this.nombre}}</option>
      {{/each}}
    </select>
    <br />
    <button type="submit">Agregar</button>
    <br />
  </form>
</div>
